{% extends 'base.html.twig' %}

{% block title %}Ajouter une Recette{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3>Ajouter une Recette</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}

                    <!-- Titre de la Recette -->
                    <div class="mb-3">
                        {{ form_label(form.titreRecettes, 'Titre de la Recette', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.titreRecettes, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titreRecettes) }}
                    </div>

                    <!-- Préparation -->
                    <div class="mb-3">
                        {{ form_label(form.preparations, 'Préparation', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.preparations, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                        {{ form_errors(form.preparations) }}
                    </div>

                    <!-- Photo -->
                    <div class="mb-3">
                        {{ form_label(form.photoRecettes, 'Photo de la Recette', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.photoRecettes, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.photoRecettes) }}
                    </div>

                    <!-- Catégories -->
                    <div class="mb-3">
                        {{ form_label(form.categories, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.categories, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.categories) }}
                    </div>

                    <!-- Difficultés -->
                    <div class="mb-3">
                        {{ form_label(form.difficultes, 'Difficulté', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.difficultes, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.difficultes) }}
                    </div>

                    <!-- Type de Repas -->
                    <div class="mb-3">
                        {{ form_label(form.repas, 'Type de Repas', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.repas, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.repas) }}
                    </div>

                    <!-- Statut (Radio buttons) -->
                    <div class="mb-3">
                        {{ form_label(form.statutRecettes, 'Statut', {'label_attr': {'class': 'form-label d-block'}}) }}
                        <div class="form-check form-check-inline">
                            {{ form_widget(form.statutRecettes, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_errors(form.statutRecettes) }}
                        </div>
                        <p></p>
<p></p>

                    </div>
<p></p>
<p></p>
<p></p>
                    <!-- Boutons -->
                    <div class="d-flex justify-content-between">
                      
                                                {{ form_widget(form.submit, {'attr': {'class': 'form-select'}}) }}

                    </div>


                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
