{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <!-- En-tête avec le titre et le bouton de création -->
        <div class="col-12 d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3">Gestion des Catégories</h1>
            <a href="{{ path('categories.create') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Ajouter une catégorie
            </a>
        </div>

        <!-- Carte affichant les statistiques -->
        <div class="col-12 mb-4">
            <div class="card text-white bg-secondary">
                <div class="card-body d-flex justify-content-around">
                    <div>
                        <h5 class="card-title">Total des Catégories</h5>
                        <p class="card-text display-6">{{ totalCategories }}</p>
                    </div>
                    <div>
                        <h5 class="card-title">Actives</h5>
                        <p class="card-text display-6 text-success">{{ totalActif }}</p>
                    </div>
                    <div>
                        <h5 class="card-title">Inactives</h5>
                        <p class="card-text display-6 text-danger">{{ totalInactif }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des catégories -->
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Liste des Catégories</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nom</th>
                                <th>Statut</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for categorie in categories %}
                                <tr>
                                    <td>{{ categorie.id }}</td>
                                    <td>{{ categorie.categories }}</td>
                                    <td>
                                        {% if categorie.statutCategories %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-danger">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('categories.show', { id: categorie.id }) }}" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Voir
                                        </a>
                                        <a href="{{ path('categories.edit', { id: categorie.id }) }}" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        Aucune catégorie trouvée.
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
