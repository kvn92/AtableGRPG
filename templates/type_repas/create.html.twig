{% extends 'base.html.twig' %}

{% block title %}Ajouter une Repas{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3>Ajouter une Repas</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    {{ form_row(form.typeRepas) }}

                    <div class="mb-3">
                        <label class="form-label d-block">{{ form_label(form.statutTypeRepas) }}</label>
                        {{ form_widget(form.statutTypeRepas, {
                            'attr': {'class': 'form-check-input'}
                        }) }}
                        {{ form_errors(form.statutTypeRepas) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('repas.index') }}" class="btn btn-outline-secondary">
                            Retour
                        </a>
                        {{ form_row(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
