{% extends 'base.html.twig' %}

{% block title %}Modifier une Difficulté{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <!-- En-tête avec un titre d'édition -->
                <div class="card-header bg-warning text-white text-center">
                    <h3>Modifier une Difficulté</h3>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}

                    <!-- Champ Difficulté -->
                    <div class="mb-3">
                        {{ form_label(form.difficultes, 'Nom de la Difficulté', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.difficultes, {'attr': {'class': 'form-control', 'placeholder': 'Exemple : Facile'}}) }}
                        {{ form_errors(form.difficultes) }}
                    </div>

                    <!-- Statut (boutons radio) -->
                    <div class="mb-3">
                        {{ form_label(form.statutDifficultes, 'Statut', {'label_attr': {'class': 'form-label d-block'}}) }}
                        <div class="form-check form-check-inline">
                            {{ form_widget(form.statutDifficultes, {'attr': {'class': 'form-check-input'}}) }}
                        </div>
                        {{ form_errors(form.statutDifficultes) }}
                    </div>

                    <!-- Boutons d'action -->
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('difficultes.index') }}" class="btn btn-outline-secondary">
                            Retour
                        </a>
                        <button type="submit" class="btn btn-warning">
                            Modifier
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
