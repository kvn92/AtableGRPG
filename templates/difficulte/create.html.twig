{% extends 'base.html.twig' %}

{% block title %}Ajouter une Difficulté{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3>Ajouter une Difficulté</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    {{ form_row(form.difficultes) }}

                    <div class="mb-3">
                        <label class="form-label d-block">{{ form_label(form.statutDifficultes) }}</label>
                        {{ form_widget(form.statutDifficultes, {
                            'attr': {'class': 'form-check-input'}
                        }) }}
                        {{ form_errors(form.statutDifficultes) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('difficultes.index') }}" class="btn btn-outline-secondary">
                            Retour
                        </a>
                        {{ form_row(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
